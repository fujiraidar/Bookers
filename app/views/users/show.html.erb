<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user,book:@book %>

<!--上はrender?-->


<div class="col-xs-9">
<h2>Books</h2>


<table class="table table-hover table-inverse">
 <thead>
	<tr>
	 <th></th>
	 <th>Title</th>
	 <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>

	<% @books.each do |book| %>
  <tr>
   <th>
	  <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %>
   </th>


   <td>
	  <span><%= link_to book.title, book_path(book.id) %></span>
   </td>

   <td>
	  <span><%= book.body %></span>
   </td>
	<% end %>
  </tr>

</tbody>
</table>
</div>
</div>
</div>
