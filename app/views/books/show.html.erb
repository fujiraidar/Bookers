
<div class="container">
  <div class="row">

    <%= render 'users/list', user: @user_profile,book:@book %>
<div class="col-xs-9">
  <h2>Book detail</h2>

 <table class="table">
  <thead></thead>
  <tbody>

    <tr>
     <th>
     <%= link_to user_path(@user.id) do %>
      <%= attachment_image_tag @book_go.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %>
     <% end %>
      <p><%= link_to @book_go.user.name, user_path(@user.id) %></p>
     </th>

     <td>
      <p><%= @book_go.title %></p>
     </td>

     <td>
      <p><%= @book_go.body %></p>
     </td>
        <% if @book_go.user_id == current_user.id %>
     <td>
    	<%= link_to "Edit", edit_book_path(@book_go), class: "btn-sm btn-success" %>
     </td>
     <td>
    	<%= link_to "Destroy", book_path(@book_go), method: :delete, "data-confirm" => "Are you sure?", class: "btn-sm btn-danger" %>
     </td>
  <% end %>
    </tr>
  </tbody>
 </table>
</div>
  </div>
</div>